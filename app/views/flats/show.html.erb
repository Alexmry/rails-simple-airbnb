<div class="border-bottom bg-white">
  <div class="container d-flex align-items-center justify-content-between py-2">

    <!-- turn this link into a button -->
    <h2>Simple Airbnb</h2>
    <a href="#" class="">Login</a>
  </div>
</div>

<div class="bg-white">
  <div class="img" style="height: 260px; background-position: center; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1476958526483-36efcaa80b1b?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=967&q=80)">
    <div class="info-banner">
      <h1></h1>
      <h4></h4>
      <p><span id="typed-strings"></span></p>
    </div>
  </div>
</div>

<div class="bg-white">
  <div class="container p-3">
    <div class="row">
      <div class="col-md-8 my-2">
        <h2><%= @flat.name %></h2>
        <p><%= @flat.address %></p>
      </div>
      <div class="col-md-4">
        <img src="https://f.roocdn.com/images/menus/70997/header-image.jpg?width=740&amp;height=320&amp;auto=webp&amp;format=jpg&amp;fit=crop&amp;v=1531393618" alt="" class="w-100">
      </div>
    </div>
  </div>
</div>

<div class="container mb-3">
  <div class="row">
    <div class="col-md-8">
      <div class="container">
        <div class="card p-2 mb-3">
          <h4>A bit more about this flat...</h4>
          <p><%= @flat.description %></p>
        </div>
      </div>
      <div class="container">
        <div class="card p-2">
          <i class="fa fa-users m-2" aria-hidden="true"><%= @flat.number_of_guests %></i>
          <i class="fa fa-gbp m-2" aria-hidden="true"><%= @flat.price_per_night %></i>
          <%= link_to "edit", edit_flat_path(@flat) %>
          <%= link_to "Delete #{@flat.name}",
                  flat_path(@flat),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="bg-white border p-3 sticky-top">
        <a href="#" class="btn btn-primary w-100">Checkout</a>

        <div class="d-flex justify-content-between mt-3 border-bottom">
          <p><strong><%= @flat.name %></strong> (1)</p>
          <p><%= @flat.price_per_night %></p>
        </div>

        <div class="d-flex justify-content-between mt-3">
          <p><strong>Total</strong></p>
          <p><strong>Â£<%= @flat.price_per_night %></strong></p>
        </div>
      </div>
    </div>
  </div>
</div>

